SSH_OPTS="-o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null"

ping ibuki -c 1 &>/dev/null

if [ $? -ne 0 ] ; then
    echo "NOTE: `basename $0` is supposed to be invoked at an ec2 instance... exit"
    exit 1
fi

echo "-INFO- starting hdfs master... "
sudo parallel-ssh --extra-args "-t -t -q $SSH_OPTS" \
    --timeout 0 \
    --hosts /tmp/hd/conf/boss \
    --user root \
    --inline \
    "nnstart" || \
exit 1

echo "-INFO- starting hdfs slaves... "
sudo parallel-ssh --extra-args "-t -t -q $SSH_OPTS" \
    --timeout 0 \
    --hosts /tmp/hd/conf/slaves \
    --user root \
    --inline \
    "dnstart" || \
exit 1

echo "--------------------"
echo "!!! HD UP !!!"

exit 0
