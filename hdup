ping ibuki -c 1 &>/dev/null

if [ $? -ne 0 ] ; then
    echo "NOTE: `basename $0` is supposed to be invoked at an ec2 instance... exit"
    exit 1
fi

if [ -z "$JAVA_HOME" ] ; then
    echo "!!! ERROR !!! JAVA_HOME not set... exit"
    exit 1
fi

if [ -z "$HADOOP_HOME" ] ; then
    echo "!!! ERROR !!! HADOOP_HOME not set... exit"
    exit 1
fi

HADOOP_CONF_DIR=/tmp/hd/conf
export HADOOP_CONF_DIR

HADOOP_LOG_DIR=/tmp/hd/logs
export HADOOP_LOG_DIR

HADOOP_PID_DIR=/tmp
export HADOOP_PID_DIR

$HADOOP_HOME/sbin/hadoop-daemon.sh \
    --script hdfs start namenode || exit 1

SSH_OPTS="-o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null -o ConnectTimeout=5"
export PDSH_SSH_ARGS_APPEND="$SSH_OPTS"
PDSH="pdsh -S -R ssh -b"
$PDSH -w ^$HADOOP_CONF_DIR/slaves "$HADOOP_HOME/sbin/hadoop-daemon.sh \
    --script hdfs start datanode" || exit 1

echo ""
echo ""
echo "--------------------"
echo "!!! HD UP !!!"

exit 0
